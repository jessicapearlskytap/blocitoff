<%= form_for list, remote: true, authenticity_token: true do |form| %>
<h2>New List</h2>
<div class="form-group">
	<div class="field form-group">
		<%= form.label :name %><br/>
		<%= form.text_field :name, placeholder: 'Name', id: 'new-list-name', autofocus: true %>
	</div>
	<div class="field form-group">
		<%= form.label :permissions %></br>	
		<%= form.select :permissions, List::AVAIL_PERMISSIONS %><br/>
	</div>
	<div class="field form-group">
		<%= form.submit 'Save', class: "btn btn-default" %>
	</div>
</div>
<% end %>
