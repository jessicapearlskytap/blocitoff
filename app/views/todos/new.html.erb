<h2>New TODO</h2>
<% if @todo.errors.any? %>
	<div class='alert alert-danger'>Your TODO could not be saved due to <%= @todo.errors.count.to_s + " error".pluralize(@todo.errors.count) %>.</div>
<% end %>

<%= form_for @todo do |form| %>
<div class="form-group">
	<%= form.label :description %><br/>
	<%= form.text_field :description, placeholder: 'Description' %><br/>
</div>
	<%= form.submit 'Save', class: "btn btn-default" %>
<% end %>
