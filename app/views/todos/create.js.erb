<% unless @todo.new_record? %>
	$('#no_todos_msg').hide();
	$('#todos_table').show();
	$('#todos_table tr:last').after("<%= escape_javascript(render 'todos_list_row', todo: @todo) %>");
	$('#todo_<%= @todo.id %> .complete-task-form').submitOnCheck();
<% end %>

$('#new_todo').html("<%= escape_javascript(render 'form', todo: @todo_for_form) %>");
$('#todo_description').focus();

<%= render 'shared/toasts', obj: @todo %>