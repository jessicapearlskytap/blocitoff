remove_todo = function(row_id) { 
	$(row_id).remove();

	if ($('#todos_table .todo-list-row').length === 0)
	{
		$('#no_todos_msg').show();
		$('#todos_table').hide();
	}
}

<% if @todo.destroyed? %>
  row_id = '#todo_<%= @todo.id %>';
	$(row_id).fadeOut(400, remove_todo(row_id));
<% end %>

<%= render 'shared/toasts', obj: @todo %>