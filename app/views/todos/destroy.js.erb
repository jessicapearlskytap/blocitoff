blank_todo = function() { $('#todos-div').html("<%= escape_javascript(render 'blank_todo_list') %>"); }

<% if @todo.destroyed? %>
	<% current_user.todos.reload # needed so the any? below will work %>
	$('#todo-<%= @todo.id %>').fadeOut(400, <%= current_user.todos.any? ? 'null' : 'blank_todo' %>);
<% end %>

$('#todo-form').html("<%= escape_javascript(render 'form', todo: @new_todo) %>");

