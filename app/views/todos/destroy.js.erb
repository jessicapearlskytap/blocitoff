remove_todo = function(row_id) { 
	$(row_id).remove();

	if ($('#todos-table .todo-list-row').length === 0)
	{
		$('#todos-div').html("<%= escape_javascript(render 'blank_todos_list') %>"); 		
	}
}

<% if @todo.destroyed? %>
  row_id = '#todo-<%= @todo.id %>';
	$(row_id).fadeOut(400, remove_todo(row_id));
<% end %>

$('#todo-form').html("<%= escape_javascript(render 'form', todo: @new_todo) %>");

<%= render 'shared/toasts', obj: @todo %>