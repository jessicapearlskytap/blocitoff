<% if @todo.destroyed? %>
  row_id = '#todo_<%= @todo.id %>';
	$(row_id).fadeOut(400, function() {
		$(row_id).remove();

		if ($('#todos_table .todo-list-row').length === 0)
		{
			$('#no_todos_msg').show();
			$('#todos_table').hide();
		}		
	});
<% end %>

<%= render 'shared/toasts', obj: @todo %>