toastr.options.positionClass = "toast-bottom-right";

<% full_errors = false if full_errors.nil? %>

<% if flash[:notice] %>
	toastr.info("<%= escape_javascript(flash.discard[:notice]) %>");
<% end %>
<% if flash[:alert] %>
	toastr.error("<%= escape_javascript(flash.discard[:alert]) %>");
<% end %>
<% if obj.errors.any? %>
	<% if full_errors %>
		toastr.error("Your changes could not be saved: <%= escape_javascript(obj.errors.full_messages.to_sentence) %>");
	<% else %>
		toastr.error("Your changes could not be saved due to <%= escape_javascript(obj.errors.count.to_s + ' error'.pluralize(obj.errors.count)) %>");
	<% end %>
<% end %>